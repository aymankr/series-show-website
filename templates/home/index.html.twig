{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link type="text/css" href="{{ asset('css/homeIndex.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<div class="container">

		<h2>Top rated series</h2>

		<article class="d-flex justify-content-center">
			{% for serie in trendingSeries %}
				<a href="{{ path('seriesPresentation', {'id': serie.id})}}">
					<img src="{{ path('seriesPoster', {'id': serie.id})}}" style="max-width:100%; height:100%;" class="preview-img-top" alt="poster"/>
				</a>
			{% endfor %}
		</article>

		<h2 class="mt-3">Series by categories</h2>
		<article class="grid mt-1">
			{% for category in categories %}
				<a href="{{path('exploreSeries', {'category':category.name})}}">
					<h3>{{ category.name }}
					</h3>
				</a>
			{% endfor %}
		</article>

		<script>
			// attribute a random color for each blocks
const randomColorBlock = document.querySelectorAll('.container a');
randomColorBlock.forEach(e => {
e.style.backgroundColor = '#' + Math.random().toString(16).slice(-6);;
})
		</script>
	</div>

{% endblock %}
