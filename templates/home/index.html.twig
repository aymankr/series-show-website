{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
        <style>
    
        .container {
            text-align:center;
        }

        .container a {
            margin :0.5em;
            background-color:#AF1F00;
            box-shadow: 0 14px 28px rgba(255,255,255,0.25), 0 10px 10px rgba(255,255,255,0.22);
            border-radius: 6%;
        }

        .grid a {
            width: 13em;
            margin :0.5em;
            background-color:#AF1F00;
            box-shadow: 0 14px 28px rgba(255,255,255,0.25), 0 10px 10px rgba(255,255,255,0.22);
            border-radius: 6%;
        }        

        .container a:hover {
            letter-spacing: 2.7px;
            transform: translate(0, -3%);
            transition: 0.3s;
            color:white;
            text-decoration:none;
        }

        </style>

        <div class="container">
        
            <h2>Top rated series</h2>

            <div class="d-flex justify-content-center">
                {% for serie in trendingSeries %}
                       <a href="{{ path('series_presentation', {'id': serie.id})}}"> 
                            <img src="{{ path('series_poster', {'id': serie.id})}}" style="max-width:100%; height:100%;" class="preview-img-top" alt="poster"/>
                        </a>
                {% endfor %}
            </div>

            <h2 class="mt-3">Series by categories</h2>
            <div class="grid mt-1">
                {% for category in categories %}
                    <a href="{{path('explore_series', {'category':category.name})}}"> <h3>{{ category.name }} </h3></a>
                {% endfor %}
            </div>

             <script>
                //attribute a random color for each blocks
                const randomColorBlock = document.querySelectorAll('.container a');
                randomColorBlock.forEach(e=>{
                    e.style.backgroundColor = '#' + Math.random().toString(16).slice(-6);;
                    })
            </script>
        </div>

{% endblock %}
