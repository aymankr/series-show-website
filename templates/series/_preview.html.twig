<div class="preview">

    <a href="{{path('series_show', {'id': serie.id})}}" class="preview-title"> {{ serie.title }} </a>
    
    <a href="{{path('series_show', {'id': serie.id})}}"> 
                <img src="{{ path('series_poster', {'id': serie.id})}}" class="preview-img-top" 
                     style="  max-width:100%; max-height:80%;" alt="poster"/>
                </a>
    <div class="preview-body">
        <div class="preview-title"> {{ serie.yearStart }}
        </div>

        {% if app.user != NULL %}
            {% if serie.getAverageRating() == -1 %} 
                <em> No one rated this serie. </em>
            {% else %}
                <em> Average of user ratings : {{ serie.getAverageRating() }}</em>
            {% endif %}
        {% endif %}
        <div>
            {% if app.user != NULL and serie in app.user.series %}
                <a class="btn btn-primary" href="{{ path('unfollow', {'id': serie.id}) }}">Unfollow</a>
            {% else %}
                <a class="btn btn-primary" href="{{ path('follow', {'id': serie.id}) }}">Follow</a>
            {% endif %}
        </div>
        <!-- imdb, youtube trailer, awards, year strart, end, action show-->
        <p class="text text-muted">{{ serie.plot }}</p>

        <div>
            {% for genre in serie.genre %}
                <em class="text-muted text-italic">#{{ genre.name }}</em>
            {% endfor %}
        </div>
    </div>
</div>