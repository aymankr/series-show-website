{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">

		<div class="d-flex justify-content-around">

			<!-- Left column -->
			<div class="d-flex flex-column">

				<!-- Title and poster -->
				<h2>{{ serie.title }}</h2>
				<img src="{{ path('series_poster', {'id': serie.id})}}" class="show-img-left" alt="poster"/>

				<!-- Year start and end -->
				<em>
					{% if serie.yearStart == NULL %}
						Unknown
					{% else %}
						{{ serie.yearStart }}
					{% endif %}
					-
					{% if serie.yearEnd == NULL %}
						Still continuing today !
					{% else %}
						{{ serie.yearEnd }}
					{% endif %}
				</em>

				<!-- Genres -->
				<section class="mt-2">
					Genres: 
					{% for category in serie.getGenre() %}
						<a href="{{path('explore_series', {'category':category.name})}}">
							<span>{{ category.name }}</span>
						</a>
					{% endfor %}
				</section>

				<!-- Follow or unfollow button -->
				{% if app.user and serie in app.user.series %}
					<a class="btn btn-primary" href="{{ path('unfollow', {'id': serie.id}) }}">Unfollow</a>
				{% else %}
					<a class="btn btn-primary" href="{{ path('follow', {'id': serie.id}) }}">Follow</a>
				{% endif %}

				<!-- Rate button -->
				{% if app.user and serie.hasBeenRatedByUser(app.user) %}
					<a class="btn btn-warning w-100 mt-2" href="{{ path('see_rate', {'id': serie.id}) }}">See my rating</a>
				{% else %}
					<a class="btn btn-warning w-100 mt-2" href="{{ path('add_series_rate', {'id': serie.id}) }}">Rate</a>
				{% endif %}
			
				<!-- Comments moderation button -->
				{% if app.user and app.user.admin %}
					<a class="btn btn-success w-100 mt-2" href="{{ path('comments_moderation', {'id': serie.id}) }}">See all comments</a>
				{% endif %}
			</div>

			<!-- Right column -->
			<div class="ml-5 mt-5">

				<!-- First section: Series informations -->
				<div class="d-flex flex-column justify-content-center mb">

					<h4> 
						<a class="text-success" target="_blank" href="https://www.imdb.com/title/{{ serie.getImdb() }}">IMDB
						</a>
						average ratings : {{ serie.getExternalRatingValue() }} 
					</h4>

					<!-- Awards -->
					{% if "N/A" not in serie.awards %}
						<h5 class="text-warning">
							{{ serie.awards }}
						</h5>
					{% endif %}
					
					<!-- Number of followers -->
					<h5>
						Followed by
						{{ serie.user|length }}
						user(s).
					</h5>

					<!-- Trailer & Plot -->
					{% if app.user and serie.hasBeenRatedByUser(app.user) %}
						<figure class="w-100 h-300">
							<iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ serie.youtubeTrailer }}" 
									title="trailer"/>
						</figure>
					{% else %}
						<h6 class="text-danger">Trailer unavailable.</h6>
					{% endif %}

					<p>{{ serie.plot }}</p>

					<!-- Actors list -->
					<h5>Actors</h5>
					<ul class="list-group list-group-horizontal-sm">
						{% for actor in serie.actor %}
							<li class="list-group-item list-group-item-danger">{{ actor.getName() }}</li>
						{% endfor %}
					</ul>

				</div>
			</div>
		</div>
		
		<!-- Second section: Series seasons & episodes -->
		<div class="container m-3">
			<h3>Seasons and episodes</h3>
			{% for season in serie.getSeasonsOrdered() %}
				<details>
				<!-- Season n -->
				<summary>Season {{ season.number }} </summary>
				<article>
					<ul class="list-style-type-none p-0">
						{% for episode in season.getEpisodesOrdered() %}
							<li class="list-group-item list-group-item-warning m-1 xsmall">

								<!-- Episode informations -->
								<strong>Episode nÂ°{{ episode.getNumber() }}</strong>: {{ episode.getTitle() }} | 
								Release date: {{ episode.date.format('Y-m-d') }} |
								
								<a class="text-success" target="_blank" href="https://www.imdb.com/title/{{ episode.getImdb() }}">IMDB 
									<strong>{{ episode.getImdbrating() }}
									</strong>
								</a>
								</br>


								<!-- Mark as seen or not seen button -->
								{% if app.user and episode in app.user.getEpisode() %}
									<a class="btn btn-primary" href="{{ path('mark_as_not_seen', {'id': episode.id}) }}">
										Mark as not seen
									</a>
								{% else %}
									<a class="btn btn-primary" href="{{ path('mark_as_seen', {'id': episode.id}) }}">
										Mark as seen
									</a>
								{% endif %}

							</li>
						{% endfor %}
					</ul>
				</article>
				
				</details>
			{% endfor %}
		</div>

		<a href="{{ path('explore_series') }}">back to list</a>
	</div>
{% endblock %}
