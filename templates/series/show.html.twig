{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">

		<div class="d-flex justify-content-around">

			<!-- Left column -->
			<div class="d-flex flex-column">

				<!-- Title and poster -->
				<h2>{{ serie.title }}</h2>
				<img src="{{ path('series_poster', {'id': serie.id})}}" class="show-img-left" alt="poster"/>

				<!-- Year start and end -->
				<em>
					{% if serie.yearStart == NULL %}
						Unknown
					{% else %}
						{{ serie.yearStart }}
					{% endif %}
					-
					{% if serie.yearEnd == NULL %}
						Still continuing today !
					{% else %}
						{{ serie.yearEnd }}
					{% endif %}
				</em>

				<!-- Genres -->
				<section class="mt-2">
					Genres: 
					{% for category in serie.getGenre() %}
						<a href="{{path('series_index', {'category':category.name})}}">
							<span>{{ category.name }}</span>
						</a>
					{% endfor %}
				</section>

				<!-- Follow or unfollow button -->
				{% if app.user != NULL and serie in app.user.series %}
					<a class="btn btn-primary" href="{{ path('unfollow', {'id': serie.id}) }}">Unfollow</a>
				{% else %}
					<a class="btn btn-primary" href="{{ path('follow', {'id': serie.id}) }}">Follow</a>
				{% endif %}

				<!-- Rate button -->
				{% if app.user != NULL and serie.hasBeenRatedByUser(app.user) %}
					<a class="btn btn-warning w-100 mt-2" href="{{ path('see_rate', {'id': serie.id}) }}">See my rating</a>
				{% else %}
					<a class="btn btn-warning w-100 mt-2" href="{{ path('add_series_rate', {'id': serie.id}) }}">Rate</a>
				{% endif %}
			
			</div>

			<!-- Right column -->
			<div class="ml-5 mt-5">

				<!-- First section: Series informations -->
				<div class="d-flex flex-column justify-content-center mb">

					<h4> {{ serie.getExternalRatingValue() }} </h4>

					<!-- Awards -->
					{% if "N/A" not in serie.awards %}
						<h5 class="text-warning">
							{{ serie.awards }}
						</h5>
					{% endif %}
					
					<!-- Number of followers -->
					<h5>
						Followed by
						{{ serie.user|length }}
						user(s).
					</h5>

					<!-- Trailer & Plot -->
					<figure class="w-100 h-300">
						<iframe width="100%" height="315" src="https://www.youtube.com/embed/{{ serie.youtubeTrailer }}" title="trailer"></iframe>
					</figure>
					<p>
						{{ serie.plot }}
					</p>

					<!-- Actors list -->
					<h5>Actors</h5>
					<ul class="list-group list-group-horizontal-sm">
						{% for actor in serie.actor %}
							<li class="list-group-item list-group-item-danger">{{ actor.getName() }}</li>
						{% endfor %}
					</ul>

				</div>

				<!-- Second section: Series seasons & episodes -->
				<div style="margin-top:5em;">
					<h3>Seasons and episodes</h3>
					{% for season in serie.getSeasonsOrdered() %}

						<!-- Season n -->
						<div style="margin-bottom: 4em;">
							<h5>Season {{ season.number }}</h5>
							<ul class="list-group list-group-vertical-sm">

								{% for episode in season.getEpisodesOrdered() %}
									<li class="list-group-item list-group-item-warning">

										<!-- Episode informations -->
										Episode nÂ°{{ episode.getNumber() }}: {{ episode.getTitle() }} </br>
										Release date: {{ episode.date.format('Y-m-d') }} </br>

										<!-- Mark as seen or not seen button -->
										{% if app.user != NULL and episode in app.user.getEpisode() %}
											<a class="btn btn-primary" href="{{ path('mark_as_not_seen', {'id': episode.id}) }}">
												Mark as not seen
											</a>
										{% else %}
											<a class="btn btn-primary" href="{{ path('mark_as_seen', {'id': episode.id}) }}">
												Mark as seen
											</a>
										{% endif %}

									</li>
								{% endfor %}
							</ul>
						</div>

					{% endfor %}
				</div>

			</div>
		</div>
		<a href="{{ path('series_index') }}">back to list</a>
	</div>
{% endblock %}
