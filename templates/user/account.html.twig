{% extends 'base.html.twig' %}

{% block title %}Account
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Account</h1>

		<h3>My informations</h3>

		<div>
			<p>Username:
				{{ app.user.name }}</p>
			<p>Email:
				{{ app.user.email }}</p>

			<p>Register date:
				{% if app.user.registerDate == NULL %}
					Unknown
				{% else %}
					{{ app.user.registerDate.format('Y-m-d') }}
				{% endif %}
			</p>

			<p>Contry:
				{% if app.user.country == NULL %}
					Not specified
				{% else %}
					{{ app.user.country }}
				{% endif %}
			</p>

		</div>

		<a class="btn btn-primary" href="{{ path('user_series') }}">See my series</a>
	</div>
{% endblock %}
